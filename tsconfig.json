{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "module": "NodeNext",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ],
            "@features/*": [
                "features/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@stores/*": [
                "stores/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        },
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "types": [
            "vitest",
            "@testing-library/jest-dom"
        ],
    },
    "include": [
        "src",
        "src/setupTests.ts"
    ]
}